<h1 class='title'>New Opportunity</h1>

<div class='section'>
    <%= simple_form_for @opportunity do |f|%>
        <div class='field'>
            <div class='control'>
                <%=f.input :organization%>
            </div>
        </div>
        <div class='field'>
            <div class='control'>
                <%=f.input :date%>
            </div>
        </div>
        <div class='field'>
            <div class='control'>
                <%=f.input :hours%>
            </div>
        </div>
        <div class='field'>
            <div class='control'>
                <%=f.input :signature%>
            </div>
        </div>
        <%= f.button :submit, 'Add Opportunity' %>
    <%end%>
</div>