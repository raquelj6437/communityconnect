<section>
    <h1>Community Connect</h1>

      <table>
        <tr>
          <th>Organization:</th>
          <th>Date:</th>
          <th>Hours:</th>
          <th>Signature:</th>
        </tr>
        <% @opportunity.each do |opportunity| %>
            <tr>
                <td><%= opportunity.organization%></td>
                <td><%= opportunity.date%></td>
                <td><%= opportunity.hours%></td>
                <td><%= opportunity.signature%></td>
                <%= button_to "Delete", '/opportunity', method: :delete %>
            </tr>
        <%end%>
      </table>
    <%= button_to "ADD OPPORTUNITY", 'opportunities/new', method: :get %>
    <%= button_to "OPPORTUNITY LIST", 'services/', method: :get %>
    <%= button_to "Log out", '/session', method: :delete %>
</section>

